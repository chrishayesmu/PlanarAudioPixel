<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Recording_GUI_2.MainWindow"
        Title="MainWindow" Height="450" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="122*"/>
            <RowDefinition Height="297*"/>
        </Grid.RowDefinitions>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="250" Margin="87,28,0,0" Stroke="Black" VerticalAlignment="Top" Width="417" Grid.RowSpan="2"/>

        <Button Content="Play" HorizontalAlignment="Left" Margin="146,192,0,0" VerticalAlignment="Top" Width="75" Grid.Row="1"/>
        <Button Content="Record" HorizontalAlignment="Left" Margin="253,192,0,0" VerticalAlignment="Top" Width="75" Grid.Row="1"/>
        <Button Content="Stop/Reset" HorizontalAlignment="Left" Margin="366,192,0,0" VerticalAlignment="Top" Width="75" Grid.Row="1"/>

        <TextBox Height="32" HorizontalAlignment="Left" Margin="44,230,0,0" x:Name="FileNameTextBox"
			VerticalAlignment="Top" Width="393" Grid.Row="1" />
        <Button Content="Browse" Height="32" HorizontalAlignment="Left" Margin="443,230,0,0"
			x:Name="FileBrowseButton" VerticalAlignment="Top" Width="88" Click="FileBrowse_Click" Grid.Row="1" />
        <Label Content="File Name" HorizontalAlignment="Left" Margin="87,161,0,0" VerticalAlignment="Top" Grid.Row="1"/>

    </Grid>
</Window>

