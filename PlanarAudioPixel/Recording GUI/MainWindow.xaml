<Window x:Class="Recording_GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="600">
    <Grid>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="207" Margin="108,63,0,0" Stroke="Black" VerticalAlignment="Top" Width="360"/>
        
        <Button Content="Play" HorizontalAlignment="Left" Margin="146,314,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Content="Record" HorizontalAlignment="Left" Margin="253,314,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Content="Stop/Reset" HorizontalAlignment="Left" Margin="366,314,0,0" VerticalAlignment="Top" Width="75"/>

        <TextBox Height="32" HorizontalAlignment="Left" Margin="44,352,0,0" Name="FileNameTextBox"
                 VerticalAlignment="Top" Width="393" />
        <Button Content="Browse" Height="32" HorizontalAlignment="Left" Margin="443,352,0,0"
                Name="FileBrowseButton" VerticalAlignment="Top" Width="88" Click="FileBrowse_Click" />

    </Grid>
</Window>
